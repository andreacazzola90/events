{
  "functions": {
    "app/api/*/route.ts": {
      "maxDuration": 60
    },
    "app/api/process-link/route.ts": {
      "maxDuration": 55
    },
    "app/api/process-image/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/scrape-visitschio/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/scrape-visitschio",
      "schedule": "0 4 * * *"
    }
  ],
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
      "PUPPETEER_SKIP_DOWNLOAD": "true",
      "PUPPETEER_EXECUTABLE_PATH": "/opt/chrome/chrome"
    }
  },
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "PUPPETEER_SKIP_DOWNLOAD": "true"
  },
  "outputDirectory": ".next",
  "buildCommand": "npm run build",
  "installCommand": "npm ci"
}